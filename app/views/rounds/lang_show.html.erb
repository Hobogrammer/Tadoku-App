<% provide(:title, 'Main Ranking') %>
<h1><%= round_name(@roundid) %> Round <%= @lang %> Ranking</h1>

<br/>
<div class = "ranking">
	<ol>
	<table class="table">
		<thead>
			<tr>
				<th>Rank</th>
				<th></th>
				<th>Username</th>
				<th>Language Total</th>
			</tr>
		</thead>
		<tbody>
			<% @entrants.each do |entrant| %>
				<tr>
					<td><li></td>
					<td><%= twivatar_for(entrant.user) %></td>
					<td><%= link_to entrant.user.name, user_path(entrant.user) %></td>
					<td><%= Update::lang_total(entrant.user, @roundid, @lang).round(2) %></td></li>
				</tr>
			<% end %>
		</tbody>
	</table>
	</ol>
</div>