<% provide(:title) %>
<% if current_user %>
	<div class="center hero-unit">
		<h1><%= current_user.name %></h1>
		<h2>Time until start/end of current round</h2>
		<script>
		$(function() {
    	$('div#clock').countdown("2012/10/01", function(event) {
        var $this = $(this);
        switch(event.type) {
            case "seconds":
            case "minutes":
            case "hours":
            case "days":
            case "weeks":
            case "daysLeft":
                $this.find('span#'+event.type).html(event.value);
                break;
            case "finished":
                $this.hide();
                break;
        }
    	});
	});
		</script>
		<div id="clock">
        <span id="weeks"></span>      Weeks
        <span id="daysLeft"></span>   Days
        <span id="hours"></span>      Hours
        <span id="minutes"></span>    Minutes
        <span id="seconds"></span>    Seconds
    </div>
    	
		<div>
        <button type= "button" class= "btn btn-large btn-primary" href="#regModal" data-toggle="modal">Register for the next round</button>
    </div>

		<div class="modal hide" id="regModal">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">Ã—</button>
				<h3>Register for Tadoku</h3>
			</div>
			<div class="modal-body">
				<%= simple_form_for @reg do |f| %>
					<%= f.input :round_id, :collection => [ "#{ApplicationHelper::curr_round.to_i}" ] %>
					<%= f.input :lang1, :collection => ["jp", "zh", "ko", "en", "es", "fr", "it"] %>
					<%= f.input :lang2, :collection => ["jp", "zh", "ko", "en", "es", "fr", "it"] %>
					<%= f.input :lang3, :collection => ["jp", "zh", "ko", "en", "es", "fr", "it"] %>
			</div>
			<div class="modal-footer">
				<%= submit_tag 'Cancel', :class => "btn btn-danger", 'data-dismiss' => "modal" %>
				<%= f.button :submit, 'Register' , :class => "btn btn-primary"%>
				<% end %>
			</div>
		</div>
  </div>

<% else %>
	<div class="center hero-unit">
		<h1>Welcome to the Tadoku App!</h1>
		<h2>something something something</h2>
		<%= link_to "Sign in with twitter", 'signin_path', class: "btn btn-large btn-danger" %>
	</div>
<% end %>