<% provide(:title) %>
<% if current_user %>
	<div class="center hero-unit">
		<h1><%= current_user.name %></h1>
		<h2>Time until start/end of current round</h2>
		<!-- Countdown dashboard start -->
		<div id="countdown_dashboard">
			<div class="dash weeks_dash">
				<span class="dash_title">weeks</span>
				<div class="digit">0</div>
				<div class="digit">0</div>
			</div>

			<div class="dash days_dash">
				<span class="dash_title">days</span>
				<div class="digit">0</div>
				<div class="digit">0</div>
			</div>

			<div class="dash hours_dash">
				<span class="dash_title">hours</span>
				<div class="digit">0</div>
				<div class="digit">0</div>
			</div>

			<div class="dash minutes_dash">
				<span class="dash_title">minutes</span>
				<div class="digit">0</div>
				<div class="digit">0</div>
			</div>

			<div class="dash seconds_dash">
				<span class="dash_title">seconds</span>
				<div class="digit">0</div>
				<div class="digit">0</div>
			</div>

		</div>

		<script language="javascript" type="text/javascript">
			jQuery(document).ready(function() {
				$('#countdown_dashboard').countDown({
					targetDate: {
						'day': 		0,
						'month': 	8,
						'year': 	2012,
						'hour': 	0,
						'min': 		0,
						'sec': 		0
					}
				});
			});
		</script>
		<%= form_tag current_user.rounds.build do  %>
			<div><%= hidden_field_tag :round_id, '201202' %></div>
			<%= submit_tag "Register for the next round", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
<% else %>
	<div class="center hero-unit">
		<h1>Welcome to the Tadoku App!</h1>
		<h2>something something something</h2>
		<%= link_to "Sign in with twitter", 'signin_path', class: "btn btn-large btn-danger" %>
	</div>
<% end %>


